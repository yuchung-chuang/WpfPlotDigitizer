<UserControl x:Class="PlotDigitizer.WPF.ImageSelectionBox"
			 xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
			 xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
			 xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
			 xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
			 xmlns:local="clr-namespace:PlotDigitizer.WPF"
			 d:DataContext="{d:DesignInstance Type=local:ImageSelectionBox}"
			 mc:Ignorable="d"
			 x:Name="root"
			 Background="Transparent"
			 d:DesignHeight="450"
			 d:DesignWidth="800">
	<Rectangle Name="selectionBox"
			   Fill="Transparent"
			   Stroke="Red"
			   StrokeThickness="1"
			   DataContext="{Binding ElementName=root}"
			   HorizontalAlignment="Left"
			   VerticalAlignment="Top"
			   Width="{Binding BoxWidth}"
			   Height="{Binding BoxHeight}"
			   Margin="{Binding BoxMargin}"/>

</UserControl>
